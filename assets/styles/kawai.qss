QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 rgba(255, 105, 180, 0.6),
                               stop:0.5 rgba(255, 20, 147, 0.6),
                               stop:1 rgba(255, 105, 180, 0.6));
}

/* Style spécial pour les messages d'erreur kawaii */
QLabel.status-error {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                               stop:0 rgba(255, 69, 0, 0.1),
                               stop:0.5 rgba(255, 105, 180, 0.1),
                               stop:1 rgba(255, 69, 0, 0.1));
}

/* Effet de pulsation pour les éléments importants */
QLabel.title-large {
}

/* Effet de brillance pour les boutons */
QPushButton::before {
}

/* Effet de cœur pour les éléments sélectionnés */
QListWidget::item:selected::after {
} 

/* ===== OVERLAY MODPACK INFO ===== */
QWidget#modpackInfoOverlay {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24px;
    border: 2.5px solid #ff69b4; 
    color: #e6e6e6;
    font-size: 16px;
    }

QWidget#statsInfoOverlay {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24px;
    border: 2.5px solid #ff69b4; 
    color: #e6e6e6;
    font-size: 16px;
    } 